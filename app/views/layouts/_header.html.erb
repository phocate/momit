            <%= link_to "Logged in as <span id='logged_in_username'>#{current_user.username}</span>".html_safe, '#', class: 'dropdown-toggle nav-link',
                  id: 'navbarDropdownUser', data: {toggle: 'dropdown'}, aria: {haspopup: 'true', expanded: 'false'} %>
            <div class="dropdown-menu momit_blue_bg momit_neutral_fg" id="login_dropdown" aria-labelledby="navbarDropdownUser">
              <%= link_to 'Edit Profile', edit_user_registration_path, class: "dropdown-item #{active_link(edit_user_registration_path)}" %>
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
