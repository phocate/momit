            <%= link_to 'Login', new_user_session_path, class: "nav-link #{active_link(new_user_session_path)}", id: 'login_link' %>
            <%= link_to 'Register', new_user_registration_path, class: "nav-link #{active_link(new_user_registration_path)}" %>
