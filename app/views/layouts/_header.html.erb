<nav class="navbar navbar-expand-lg navbar-light momit_blue_bg fixed-top">
    <%= link_to image_tag("/assets/logos/momit_full_logo_small.png", class: 'navbar-brand d-none d-md-inline-block'), root_path %>
    <%= link_to image_tag("/assets/logos/momit_full_logo_mobile.png", class: 'navbar-brand d-sm-inline-block d-md-none'), root_path %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to 'Calendar', root_path, class: "nav-link #{active_link(root_path)}" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Forum', thredded_path, class: "nav-link #{active_link(thredded_path)}" %>
      </li>
      <li class="nav-item dropdown">
        <%= link_to 'Resources', root_path, class: 'dropdown-toggle nav-link', id: 'navbarDropdown', data: {toggle: 'dropdown'}, aria: {haspopup: "true", expanded: "false"} %>
        <div class="dropdown-menu momit_blue_bg momit_neutral_fg" aria-labelledby="navbarDropdown">
            <%= link_to 'Code of Conduct', code_of_conduct_path, class: "dropdown-item #{active_link(code_of_conduct_path)}" %>
            <%= link_to 'Guild Policies', guild_policies_path, class: "dropdown-item #{active_link(guild_policies_path)}" %>
            <%= link_to 'Warcraft Logs', WARCRAFT_LOGS_PATH, class: "dropdown-item #{active_link(WARCRAFT_LOGS_PATH)}" %>
        </div>
      </li>
