      <li class="nav-item dropdown">
        <%= link_to 'Admin', '#', class: 'dropdown-toggle nav-link', id: 'navbarDropdownAdmin', data: {toggle: 'dropdown'}, aria: {haspopup: 'true', expanded: 'false'} %>
